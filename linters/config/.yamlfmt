# Default yamlfmt configuration for devbase-check
# Projects can override this by creating their own .yamlfmt file

exclude:
  - target/
  - node_modules/
  - vendor/
  - dist/
  - build/
  - generated-sources/
  - "**/*generated*"
  - tests/libs/

formatter:
  type: basic
  retain_line_breaks_single: true
